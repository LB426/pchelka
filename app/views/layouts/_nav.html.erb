<div id="user_nav">
  <%= link_to "главная", root_path %> |

  <% if current_user %>

    <% if current_user_driver? %>
      <%= current_user.login %> |
    <% end %>

    <% if current_user_disp? && current_user_driver? %>
      <%= link_to "Трэки", tracks_path %> |
      <%= link_to "Карта", all_last_point_path %> |
      <%= link_to "Водители", user_index_path %> |
      <%= link_to "Очередь", api_queue_path(current_user.login,current_user.password) %> |
      <%= link_to "Отчёты", "#" %> |
    <% end %>
    
    <% if current_user_admin? && current_user_disp? && current_user_driver? %>
      <%= link_to "Настройки", showall_defsets_path %> |
      <%= link_to "<strong>API test</strong>".html_safe, api_test_path %> |
    <% end %>

    <%= link_to "выход", logout_path %>
  <% else %>
    <%= link_to "вход", login_path %>
  <% end %>

</div>
