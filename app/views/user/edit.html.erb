<h3>Редактирование настроек пользователя</h3>

<%= form_tag(user_update_path(@user), method: "post") do %>
  <p>
    <%= label_tag(:login, "Login:") %>
    <%= text_field_tag(:login, @user.login) %>
  </p>
  <p>
    <%= label_tag(:password, "Password:") %>
    <%= text_field_tag(:password, @user.password) %>
  </p>
  <p>
    <%= label_tag(:car, "Машина:") %>
    <%= text_field_tag(:car, @user.car) %>
  </p>
  <p>
    <%= label_tag(:cardesc, "Описание машины:") %>
    <%= text_field_tag(:cardesc, @user.cardesc) %>
  </p>
  <p>
    <%= label_tag(:group, "Группа:") %>
    <%= select_tag :group, options_for_select(@groups, @user.group) %>
  </p>
  <p>
    <%= label_tag(:monetary_unit, "Денежная единица:") %>
    <%= text_field_tag(:monetary_unit, @user.monetary_unit) %>
  </p>
  <p>
    <%= submit_tag("Применить") %>
  </p>
<% end %>

<p>
<%= link_to "Настройка таксометра", user_show_settings_taximeter_path(@user) %>
</p>
