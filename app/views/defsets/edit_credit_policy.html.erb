<h3>Изменить настройку кредитной политики по умолчанию<h3>
<hr>
<%= form_tag(update_defset_credit_policy_path, method: "post") do %>
  <p>
    <%= label_tag(:name, "Название кредитной политики:") %>
    <%= text_field_tag(:name, @name, :size => 40) %>
  </p>
  <p>
    <%= label_tag(:value, "Способ снятия денег с кредитного счёта:") %>
    <%= text_field_tag(:method, @method) %>
    <!-- <%= select_tag "value", "<option value=\"one_per_24_hours\">один раз за 24 часа</option>
                             <option value=\"one_per_1_order\">за каждый заказ</option>".html_safe %> -->
  </p>
  <p>
    <%= label_tag(:cost, "Сумма снимаемая согласно способу снятия:") %>
    <%= text_field_tag(:cost, @cost) %>
  </p>
  <p>
    <%= submit_tag("Изменить") %>
  </p>
<% end %>
<hr>
<%= form_tag(destroy_defset_credit_policy_path, method: "post") do %>
  <%= submit_tag("Удалить") %>
<% end %>
